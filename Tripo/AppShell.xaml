<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PleOps.Tripo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PleOps.Tripo"
    xmlns:local_traveller="clr-namespace:PleOps.Tripo.Traveller"
    >

    <TabBar>
        <ShellContent
            Title="Travel"
            ContentTemplate="{DataTemplate local_traveller:TravelDayListView}"
            Route="TravelPage" />
        
        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate local_traveller:TravelMapView}"
            Route="MapPage" />
    </TabBar>

</Shell>
