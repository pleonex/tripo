<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PleOps.Tripo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PleOps.Tripo"
    xmlns:local_traveller="clr-namespace:PleOps.Tripo.Traveller"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            IsVisible="False"
            Route="MainPage" />

        <ShellContent
            Title="Travel"
            ContentTemplate="{DataTemplate local_traveller:WorldeeView}"
            Route="TravelPage" />
    </TabBar>

</Shell>
